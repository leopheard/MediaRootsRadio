<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.mediarootsradio" name="Media Roots Radio" version="1.0.0" provider-name="leopheard">
  <requires>
    <import addon="xbmc.python" version="2.26.0"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
    <import addon="script.module.beautifulsoup4" version="4.3.1"/>
    <import addon="script.module.requests" version="1.1.0"/>
    <import addon="script.module.routing" version="0.2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language>en_us</language>
    <summary lang="en">Media Roots Radio</summary>
    <description lang="en">Media Roots is a citizen journalism project that reports the news from outside of party lines while providing a collaborative forum for conscious citizens, artists and activists to unite.</description>
    <license>The MIT License (MIT)</license>
    <forum></forum>
    <email>leopheard@gmail.com</email>
    <source>https://github.com/leopheard/MediaRootsRadio</source>
    <website>http://www.mediaroots.org/radio</website>
        	<assets>
			<icon>resources/media/icon.jpg</icon>
			<fanart>resources/media/fanart.jpg</fanart>
			<screenshot>resources/media/1.png</screenshot>
			<screenshot>resources/media/2.jpg</screenshot>
			<screenshot>resources/media/3.png</screenshot>
		</assets>
  </extension>
</addon>
